#!/ffp/bin/sh -xe

PN=zlib
PV=1.2.5
PR=1

. ./config.ffp

X=$(pwd)
mkdir -p $X/build
W=$X/build
D=$W/pkg

cd $W
tar -vxf $X/$PN-$PV.tar*
cd $PN-$PV

CFLAGS="$FFP_CFLAGS" LDFLAGS="$FFP_LDFLAGS" \
./configure \
	--prefix=/ffp \
	--shared
colormake V=2
colormake prefix=$D/ffp install V=2

rm -rf $D$mandir/man3

mkdir -p $D/install
cp $X/{DESCR,HOMEPAGE} $D/install/

cd $D
makepkg $PN $PV $PR

