#!/ffp/bin/sh -xe

PN=$(basename $0 .funpkg)
PV=$(ls linux-*.tar* | egrep -o '[0-9][0-9.]*[0-9]')
PR=1

. ./config.ffp

linux_arch=arm

X=$(pwd)
mkdir -p $X/build
W=$X/build
D=$W/pkg

cd $W
tar -vxf $X/linux-$PV.tar*
cd linux-*

colormake ARCH=$linux_arch INSTALL_HDR_PATH=$D/ffp headers_install V=2

cd $D
makepkg $PN $PV $PR



