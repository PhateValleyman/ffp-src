#!/ffp/bin/sh -xe

PN=$(basename $0 .funpkg)
A=$(ls jpegsrc*.tar*)
PV=$(echo $A | cut -d. -f2 | cut -b2-)
PR=1

. ./config.ffp

X=$(pwd)
mkdir -p $X/build
W=$X/build
D=$W/pkg

cd $W
tar -vxf $X/$A
cd jpeg-*

LDFLAGS="$FFP_LDFLAGS" \
./configure \
	--build=$GNU_BUILD \
	--host=$GNU_HOST \
	--prefix=/ffp \
	--mandir=$mandir \
	--without-x \
	--enable-shared \
	--enable-static

colormake V=2
colormake DESTDIR=$D install V=2

mkdir -p $D/install
cp $X/{DESCR,HOMEPAGE} $D/install/
#_doc README

cd $D
makepkg $PN $PV $PR


